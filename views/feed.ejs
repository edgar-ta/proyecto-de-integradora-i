<%- 

include('./templates/short-header.ejs') 

%>

<section class="bg-white min-h-screen relative flex flex-col">
    <%- include("./templates/bottom-menu.ejs"); %>
    <div class="pb-[4rem] grid grid-cols-[192px_1fr_192px] flex-grow justify-items-center">
        <a href="/app/post/new" class="
        row-start-1
        col-start-3 
        top-[calc(100vh_-_4rem_-_2rem_-_4rem)] 
        sticky 
        h-[4rem] 
        aspect-square 
        bg-cyan-800 
        rounded-full 
        text-white
        flex
        items-center
        justify-center
        text-2xl
        hover:bg-cyan-950
        transition-all
        hover:scale-125
        active:scale-110
        ">
            <i class="fa-solid fa-plus"></i>
        </a>
        <div class="w-full pb-12 relative col-start-2 row-start-1">
            <% for (let postCardDatum of postCardData) { %>
                <a href="/app/feed/post/<%= postCardDatum.postId %>" class="grid grid-cols-2 shadow-lg p-8 gap-8">
                    <div class="aspect-square w-full relative overflow-hidden bg-black">
                        <img src="<%= postCardDatum.postCoverImage %>" alt="" class="max-w-full max-h-full absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
                    </div>
                    <div class="flex flex-col justify-between">
                        <div>
                            <a class="flex h-fit" href="/app/feed/user/<%= postCardDatum.authorUsername %>">
                                <img src="<%= postCardDatum.authorProfilePicture %>" alt="" class="max-h-8 max-w-8">
                                <h1><%= postCardDatum.authorUsername %></h1>
                            </a>
                            <p>
                                Hace <%= postCardDatum.postFormattedCreationDate %>
                            </p>
                            <p>
                                <%= postCardDatum.postSummary %>
                            </p>
                        </div>
                        <div>
                            fdasfsdafsa
                            fafjsalk
                            fsadlk
